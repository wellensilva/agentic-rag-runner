name: papers (quick run)
on:
  workflow_dispatch: {}
jobs:
  run:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: '3.11'
      - run: pip install --disable-pip-version-check --no-cache-dir feedparser
      - name: Run papers fixed query
        run: |
          python runner.py --task papers \
            --query "agentic rag memory tools" \
            --max_results 3
      - uses: actions/upload-artifact@v4
        with:
          name: logs
          path: logs/