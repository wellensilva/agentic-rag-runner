name: agentic-rag

on:
  workflow_dispatch:
    inputs:
      task:
        description: "O que rodar (stub_v3 | papers | demo)"
        required: true
        default: "stub_v3"
      profile:
        description: "Perfil/PreferÃªncias (ex.: default | whatsapp_acolhedor)"
        required: false
        default: "default"
      query:
        description: "Pergunta/consulta (usa nos stubs e em papers)"
        required: false
        default: ""

jobs:
  run:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          if [ -f requirements.txt ]; then pip install -r requirements.txt; fi
          pip install feedparser pyyaml beautifulsoup4 requests tenacity

      - name: Executar runner
        env:
          TASK: ${{ inputs.task }}
          PROFILE: ${{ inputs.profile }}
          QUERY: ${{ inputs.query }}
        run: |
          set -e
          python runner.py --task "$TASK" --profile "$PROFILE" --query "$QUERY"

      - name: Anexar artefatos
        uses: actions/upload-artifact@v4
        with:
          name: agent-test-results
          path: |
            outputs/**
            logs/**
            *.json
          if-no-files-found: warn